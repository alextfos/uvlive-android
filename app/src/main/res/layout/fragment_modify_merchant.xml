<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="es.uv.uvlive.ui.fragment.ModifyMerchantFragment"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_search"
                android:layout_weight="0"/>
            <EditText
                    android:id="@+id/modify_merchant_searchbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:inputType="text"
                    android:imeOptions="actionSend"
                    android:hint="@string/modify_merchant_searchbar_placeholder"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"/>

            <ImageView
                android:id="@+id/modify_merchant_searchbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:src="@mipmap/ic_search_button" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <include android:id="@+id/no_results" layout="@layout/info_not_found" android:visibility="gone"/>
    <include android:id="@+id/merchant_form" layout="@layout/fragment_merchant_register" android:visibility="gone"/>
</LinearLayout>
