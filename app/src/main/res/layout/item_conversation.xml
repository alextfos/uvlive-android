<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/item_conversation_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="horizontal"
    android:weightSum="1"
    android:padding="5dp"
    android:layout_gravity="center_vertical"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:id="@+id/item_conversation_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_weight="0"
        android:tint="@color/colorAccent"
        android:src="@mipmap/ic_single_conversation"

        />
    <TextView
        android:id="@+id/item_conversation_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:textSize="18sp"
        android:textColor="@color/colorAccent"
        tools:text="blabadfjasklfjasdñfajsdfñsaljfalksdfj" />

</LinearLayout>