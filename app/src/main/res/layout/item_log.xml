<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">
    <TextView
        android:id="@+id/item_log_level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="VERBOSE"/>
    <TextView
        android:id="@+id/item_log_clazz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="es.uvlive.models.db.DBConnection"/>
    <TextView
        android:id="@+id/item_log_timeStamp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="2017-03-22 10:25:59.442"/>
    <TextView
        android:id="@+id/item_log_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Database connected"/>
</LinearLayout>